# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-notes-summarizer?retryWrites=true&w=majority

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-here

